{# {% extends 'base.html.twig' %}

{% block title %}Order index{% endblock %}

{% block body %}
    <h1>Order index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Reference</th>
                <th>Stripe_token</th>
                <th>Brand_stripe</th>
                <th>Last_stripe</th>
                <th>Id_charge_stripe</th>
